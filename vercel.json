{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/",          "destination": "/public/index.html" },
    { "source": "/sw.js",     "destination": "/public/sw.js" },
    { "source": "/manifest.json", "destination": "/public/manifest.json" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600, stale-while-revalidate=86400" }
      ]
    }
  ]
}
